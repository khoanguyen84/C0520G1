@model Students
@{
    ViewData["Title"] = "Student page";
    var courseId = ViewBag.CourseId;
}

<div class=" row">
    <a asp-controller="Student" asp-action="Create" asp-route-id="@courseId" class="btn btn-info">Create</a>
    <a asp-controller="Course" asp-action="index" class="btn btn-link">Back to Course</a>
    <table class="table table-bordered mt-2">
        <caption style="caption-side:top;" class="text-warning">DANH SÁCH HỌC VIÊN LỚP @Model.CourseName.ToUpper()</caption>
        <thead class="thead-dark">
            <tr>
                <th>Student Id</th>
                <th>Fullname</th>
                <th>Gender</th>
                <th>DoB</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.StudentList)
            {

                <tr>
                    <td>@item.StudentId</td>
                    <td>@item.Fullname</td>
                    <td>@item.GenderStr</td>
                    <td>@item.DobStr</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.StatusName</td>
                    <td>
                        <a href="javascripts:;" onclick="student.detail(@item.StudentId, '@item.Fullname', '@item.GenderStr',
                                                                        '@item.DobStr', '@item.Email', '@item.PhoneNumber',
                                                                        '@item.StatusName', '@item.Avatar')" class="item"><i class='fas fa-eye'></i></a>
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.StudentId" class="item"><i class='fas fa-edit text-success'></i></a>
                        <a href="javascripts:;" class="item"><i class='fas fa-trash text-danger'></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal" id="detail">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title" style="font-size:30px;font-weight:800;padding-left:170px;">Detail</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div id="detail-view" style="border-radius:5px; font-weight: 500;">

                </div>

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/student.js" asp-append-version="true"></script>
}
