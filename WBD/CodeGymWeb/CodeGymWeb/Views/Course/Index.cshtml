@model List<CourseView>
@{
    ViewData["Title"] = "Course page";
}

<div class=" row">
    <a asp-controller="Course" asp-action="Create" class="btn btn-info">Create</a>

    <table class="table table-bordered mt-2">
        <thead class="thead-dark">
            <tr>
                <th>Course Id</th>
                <th>Course Name</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.StartDateStr</td>
                    <td>@item.EndDateStr</td>
                    <td> <a data-toggle="tooltip" title="Sửa" style="margin:0px 5px" asp-controller="Course"
                            asp-action="Detail" asp-route-id="@item.CourseId"><i class="fas fa-eye"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>