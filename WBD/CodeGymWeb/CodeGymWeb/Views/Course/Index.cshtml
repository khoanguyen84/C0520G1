@model List<CourseView>
@{
    ViewData["Title"] = "Course page";
}


@if (TempData["Message"] != null)
{
    <p class="alert alert-success">@TempData["Message"]</p>
}
<a asp-controller="Course" asp-action="Create" class="btn btn-info my-1">Create</a>
<div class="text-center my-2">
    <table id="tbTables" class="table table-bordered mt-2">
        <thead class="thead-dark">
            <tr>
                <th>Course Id</th>
                <th>Course Name</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var actions = "";
                switch (item.Status)
                {
                    case 1:
                        {
                            actions = $"<a href='{Url.Action("Update", "Course", new { id = item.CourseId })}' class='text-warning ml-2' ><i class='fas fa-edit'></i></a>";
                            actions += $" <a href='javascript: void(0)' class='text-success ml-2' onclick='courses.changeCourseStatusToCompleted({@item.CourseId},`{@item.CourseName}`)'><i class='fas fa-check-circle'></i></a>";
                            break;
                        }
                    case 3:
                        {
                            actions = $"<a href='javascript: void(0)' class='text-info ml-2' onclick='courses.changeCourseStatusToInProcess({@item.CourseId},`{@item.CourseName}`)'><i class='far fa-play-circle'></i></a>";
                            actions += $"<a href='{Url.Action("Update", "Course", new { id = item.CourseId })}' class='text-warning ml-2' ><i class='fas fa-edit'></i></a>";
                            actions += $"<a href='javascript: void(0)' class='text-danger ml-2' onclick='courses.delete({@item.CourseId},`{@item.CourseName}`)'><i class='fas fa-trash'></i></a>";
                            break;
                        }
                }
                <tr>
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.StartDateStr</td>
                    <td>@item.EndDateStr</td>
                    <td>
                        <span class="@(item.Status == 1? "btn btn-primary": (item.Status == 2? "btn btn-success" : (item.Status == 3? "btn btn-warning" : "btn btn-danger")))" style="width: 100px; height: 40px;">
                            @item.StatusName
                        </span>
                    </td>
                    <td class="text-left">
                        <a asp-controller="Course" asp-action="Details" asp-route-id="@item.CourseId" class="ml-2"><i class="fas fa-eye text-primary"></i></a>
                        @Html.Raw(actions)
                        @*<a asp-controller="Course" asp-action="Update" asp-route-id="@item.CourseId"><i class="fas fa-edit text-warning"></i></a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="~/js/courses.js" asp-append-version=" true"></script>
}

