@model List<CourseView>
@{
    ViewData["Title"] = "Course page";
}

<div class=" row">
    <a asp-controller="Course" asp-action="Create" class="btn btn-info">Create</a>

    <table class="table table-bordered mt-2">
        <thead class="thead-dark">
            <tr class="text-center">
                <th>ID</th>
                <th>Course Name</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr class="text-center">
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.StartDateStr</td>
                    <td>@item.EndDateStr</td>
                    <td><a class="text-info" asp-controller="Course" asp-action="Details" asp-route-id="@item.CourseId">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>