@model List<CourseView>
@{
    ViewData["Title"] = "Course page";
}

<div class=" row">
    <table  class="table table-bordered" style="text-align: center;">
        <thead class="thead-dark">
            <tr>
                <th>Course Id</th>
                <th>Course Name</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.StartDateStr</td>
                    <td>@item.EndDateStr</td>
                    <td><a class="btn btn-danger" asp-controller="Course" asp-action="Detail" asp-route-id="@item.CourseId">Chi tiết</a>
                        <a class="btn btn-success" asp-controller="Course" asp-action="Edit" asp-route-id="@item.CourseId">Cập nhật</a>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>

