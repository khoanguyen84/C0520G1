@model List<CourseView>
@{
    ViewData["Title"] = "Course page";
}
<h4>@TempData["thanhcong"]</h4>
    <a asp-controller="Course" asp-action="Create" class="btn btn-info">Create</a>
    <table id="table_id" class="table table-bordered mt-2">
        <thead class="thead-dark">
            <tr>
                <th>Course Id</th>
                <th>Course Name</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var actions = "";
                switch (item.Status)
                {
                    case 1:
                        {
                            actions = $"<a href='{Url.Action("Update", "Course", new { id = item.CourseId })}'><i class='fas fa-edit'></i></a>";
                            actions += $" <a href='#' onclick='Complete({item.CourseId},\"" + item.CourseName + "\")'><i class='fas fa-check-circle'></i></a>";
                            break;
                        }
                    case 3:
                        {
                            actions = $"<a href='#' onclick='Delete({item.CourseId},\"" + item.CourseName + "\")'><i class='fas fa-trash'></i></a>";
                            actions += $" <a href='{Url.Action("Update", "Course", new { id = item.CourseId })}'><i class='fas fa-edit'></i></a>";
                            actions += $" <a href='#' onclick='Active({item.CourseId},\"" + item.CourseName + "\")'><i class='far fa-play-circle'></i></a>";
                            break;
                        }
                }


                <tr>
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.StartDateStr</td>
                    <td>@item.EndDateStr</td>
                    <td>
                        <span class="@(item.Status == 1 ? "btn btn-primary" : (item.Status == 2 ? "btn btn-success" : "btn btn-warning"))">@item.StatusName</span>
                    </td>
                    <td>
                        <a asp-controller="Course" asp-action="Details" asp-route-id="@item.CourseId"><i class="fas fa-eye"></i></a>
                        @Html.Raw(actions)
                    </td>
                </tr>
            }
        </tbody>
    </table>
@section scripts{ 
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/datatables/js/jquery.dataTables.js"></script>
<script>
    function Delete(id, name) {
        var r = confirm("Do you want to delete " + name + "?");
        if (r == true) {
            window.location.href = "Course/Delete?id=" + id;
            alert("Delete completed " + name + "!");
        }
    };
    function Active(id, name) {
        var r = confirm("Do you want to active " + name + "?");
        if (r == true) {
            window.location.href = "Course/Active?id=" + id;
            alert("active completed " + name + "!");
        }
    };
    function Complete(id, name) {
        var r = confirm("Do you want to Complete " + name + "?");
        if (r == true) {
            window.location.href = "Course/Complete?id=" + id;
            alert("completed " + name + "!");
        }
    };
</script>
<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>
}