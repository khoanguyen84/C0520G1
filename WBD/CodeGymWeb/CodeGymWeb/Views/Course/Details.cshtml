@model CourseView
@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center">
    <div class="col-sm-6">
        <div class="card my-2">
            <div class="card-header text-center">
                <h3> Name: @Model.CourseName</h3>
            </div>
            <div class="card-body text-center">
                <h3>Status: @(Model.Status == 1 ? "Active" : "Inactive")</h3>
                <h3>Start Date: @Model.StartDateStr </h3>
                <h3>End Date :@Model.EndDateStr</h3>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Course" asp-action="Index" class="btn btn-warning">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-primary">Edit</a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.CourseId" class="btn btn-info">Delete</a>
            </div>
        </div>
    </div>
</div>

