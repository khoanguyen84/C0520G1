@model CourseView
@{
    ViewData["Title"] = "Course Create";
}
<h4 class="text-danger">@TempData["thanhcong"]</h4>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Course" asp-action="Create" method="post">
            <h3>@ViewData["Message"]</h3><br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseName"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <a asp-controller="Course" asp-action="index" class="btn btn-outline-secondary">Back</a>
            <button class="btn btn-info">Create</button>
        </form>
    </div>
</div>