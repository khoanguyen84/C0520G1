    @model CodeGymWeb.Models.Course.CourseView

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> @Model.CourseName</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Course Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class = "col-sm-2">
            Course Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class = "col-sm-2">
            Start Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDateStr)
        </dd>
        <dt class = "col-sm-2">
            End Start
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDateStr)
        </dd>
        <dt class = "col-sm-2">
           Status Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = @Model.CourseId, }, new { @class = "btn btn-info"}) |
    <a asp-controller="Course" asp-action="Index" class="btn btn-success">Back to List</a>
</div>
