@model ModuleView
@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center">
    <div class="col-sm-6">
        <div class="card my-2">
            <div class="card-header">
                <h3> Name: @Model.ModuleName</h3>
            </div>
            <div class="card-body text-center">
                <h3>Status: @Model.Status</h3>
                <h3>Duration: @Model.Duration</h3>
                <h3>Start Date: @Model.StartDateStr </h3>
                <h3>Modified Date :@Model.ModifiedDateStr</h3>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Module" asp-action="Index" class="btn btn-warning">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.ModuleId" class="btn btn-primary">Edit</a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.ModuleId" class="btn btn-info">Delete</a>
            </div>
        </div>
    </div>
</div>
